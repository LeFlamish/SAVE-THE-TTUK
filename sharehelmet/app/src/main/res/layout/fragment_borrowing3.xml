<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frag3_QR.BorrowingFragment3">
    <com.naver.maps.map.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <Button
        android:id="@+id/btn_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 위치"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>
    <LinearLayout
        android:id="@+id/using"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 이용 상태 정보 -->
        <TextView
            android:id="@+id/usageStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이용 상태 정보"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCFCFCF"
            android:layout_marginVertical="3dp" />

        <!-- 헬멧 ID 항목 -->
        <TextView
            android:id="@+id/helmetIdLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="헬멧 ID"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helmetId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:textSize="16sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCFCFCF"
            android:layout_marginVertical="3dp" />

        <!-- 배터리 항목 -->
        <TextView
            android:id="@+id/batteryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="배터리"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:textSize="16sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCFCFCF"
            android:layout_marginVertical="3dp" />

        <!-- 시작 시간 항목 -->
        <TextView
            android:id="@+id/startTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="시작 시간"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:textSize="16sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCFCFCF"
            android:layout_marginVertical="3dp" />

        <!-- 사용 시간 항목 -->
        <TextView
            android:id="@+id/usingTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="사용 시간"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/using_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="00:00:00"
            android:textSize="16sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCFCFCF"
            android:layout_marginVertical="3dp" />

        <android.widget.Button
            android:id="@+id/return_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_orange"
            android:text="반납" />
    </LinearLayout>

</LinearLayout>