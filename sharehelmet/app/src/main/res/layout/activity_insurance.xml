<!-- res/layout/activity_insurance_policy.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/insurance_policy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/insurance_policy_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_subtitle"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- 1단계 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1단계"
            android:textSize="12sp"
            android:textColor="@color/red_orange"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_1_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_1_text"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 2단계 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2단계"
            android:textSize="12sp"
            android:textColor="@color/red_orange"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_2_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_2_text"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 3단계 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3단계"
            android:textSize="12sp"
            android:textColor="@color/red_orange"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_3_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_3_text"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 4단계 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4단계"
            android:textSize="12sp"
            android:textColor="@color/red_orange"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_4_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_4_text"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 5단계 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5단계"
            android:textSize="12sp"
            android:textColor="@color/red_orange"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_5_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_5_text"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 6단계 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6단계"
            android:textSize="12sp"
            android:textColor="@color/red_orange"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_6_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_step_6_text"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/insurance_policy_contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_contact_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/insurance_policy_contact_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insurance_policy_contact_subtitle"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
