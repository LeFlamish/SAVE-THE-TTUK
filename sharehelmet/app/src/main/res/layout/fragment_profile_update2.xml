<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag5_profile.ProfileUpdate.ProfileUpdateFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <EditText
            android:id="@+id/edit_MAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경할 이메일"
            android:layout_marginTop="32dp"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/edit_PHONE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경할 전화번호"
            android:layout_marginTop="16dp"
            android:inputType="phone"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/edit_MAIL"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/edit_PW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경할 비밀번호"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/edit_PHONE"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/edit_PW_confilm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/edit_PW"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 삭제"
            android:textSize="16sp"
            android:fontFamily="@font/font_main"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/edit_PW_confilm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <android.widget.Button
        android:id="@+id/change_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_ripple_effect"
        android:backgroundTint="@color/red_orange"
        android:fontFamily="@font/font_main"
        android:text="변경하기"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>