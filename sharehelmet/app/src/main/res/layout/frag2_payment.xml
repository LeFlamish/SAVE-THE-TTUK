<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Available Beam Credits -->
    <RelativeLayout
        android:id="@+id/credits_container"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:elevation="3dp"
        android:background="@drawable/background_orange_round_border_10"
        android:padding="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/payment_method_section">

        <TextView
            android:id="@+id/credits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="보유중인 포인트"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/font_main"/>

        <TextView
            android:id="@+id/beam_credits_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credits_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_main"/>

        <TextView
            android:id="@+id/money_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credits_title"
            android:layout_toEndOf="@id/beam_credits_amount"
            android:layout_marginTop="16dp"
            android:text=" 원"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_main"/>

        <ImageView
            android:id="@+id/payment_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/add_24"
            app:tint="@color/white" />
    </RelativeLayout>

    <!-- Payment Method Section -->
    <RelativeLayout
        android:id="@+id/payment_method_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/credits_container">

        <TextView
            android:id="@+id/payment_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제수단 관리"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_main"
            android:layout_alignParentStart="true"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/payment_method_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_method_title"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            >


        <ImageView
                android:id="@+id/payment_method_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:src="@drawable/bootpayxml"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

            <TextView
                android:id="@+id/payment_method_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부트페이(Boot Pay)"
                android:textSize="16sp"
                android:fontFamily="@font/font_main"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/payment_method_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

            <ImageView
                android:id="@+id/payment_method_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/payment_method_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFCFCFCF">

    </View>

    <!-- Promotion Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/promotion_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/payment_method_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/promotion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰/포인트 등록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/promotion_code_edit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="쿠폰 번호를 입력해주세요"
            android:textSize="16sp"
            android:fontFamily="@font/font_main"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/promotion_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/promotion_button"/>

        <TextView
            android:id="@+id/promotion_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:text="확인"
            android:textSize="16sp"
            android:fontFamily="@font/font_main"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/background_orange_round_border_10"
            android:backgroundTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/promotion_title"
            app:layout_constraintStart_toEndOf="@id/promotion_code_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cupon_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/promotion_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/cupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유중인 쿠폰"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ListView
            android:id="@+id/cupon_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cupon_title"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
